@model ICollection<Universidad.Models.AppointmentVet>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}



<div class="page-title">
    <div class="title_left">
        <h3>Citas</h3>
    </div>
</div>
<div class="clearfix"></div>
<div class="row">
    <div class="col-md-12 col-sm-12 ">
        <div class="x_panel">
            <div class="x_title">
                <h2>Detalle <small>de citas veterinarias</small></h2>
                <ul class="nav navbar-right panel_toolbox">
                    <li> <form action="/appointmentvet/create"><button type="submit" class="btn btn-success">Crear nuevo</button></form></li>
                    <li>
                        <a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
                    </li>
                    <li>
                        <a class="close-link"><i class="fa fa-close"></i></a>
                    </li>
                </ul>
                <div class="clearfix"></div>

                <div class="x_content">

                    <div class="table-responsive">
                        <table class="table table-striped jambo_table bulk_action">
                            <thead>
                                <tr class="headings">
                                    <th class="column-title">Concepto</th>
                                    <th class="column-title">Especialidad</th>
                                    <th class="column-title">Tipo de animal</th>
                                    <th class="column-title">Raza del animal</th>
                                    <th class="column-title">Nombre del animal</th>
                                    <th class="column-title">Fecha</th>
                                    <th class="column-title">Acciones</th>
                                </tr>
                            </thead>
                            <tbody>
                                @{
                                    if (Model != null)
                                    {
                                        int count = 0;
                                        foreach (var item in Model)
                                        {
                                            string classCss = count % 2 == 0 ? "even" : "odd";
                                            <tr class="@classCss pointer">
                                                <td class=" ">@item.Name</td>
                                                <td class=" ">@Model.First().specialtyVets.Find(x => x.Id == item.IdSpecialtyVet).Name</td>
                                                <td class=" "> @Model.First().animalTypes.Find(x => x.Id == Model.First().animals.Find(o => o.Id == item.IdAnimal).IdAnimalType).Name</td>
                                                <td class=" ">@Model.First().animalRazes.Find(x => x.Id == Model.First().animals.Find(o => o.Id == item.IdAnimal).IdAnimalRaze).Name</td>
                                                <td class=" ">@Model.First().animals.Find(x => x.Id == item.IdAnimal).Name</td>
                                                <td class=" ">@Model.First().schedules.Find(x => x.Id == item.IdShedule).AppointmentDate.ToString("yyyy/MM/dd")  @Model.First().schedules.Find(x => x.Id == item.IdShedule).Hours</td>
                                                <td>@Html.ActionLink("Edit", "Editar", new {  id = item.Id  })</td>
                                            </tr>
                                        }
                                    }
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

