@model Universidad.Models.SearchFlightResult

@{
    ViewData["Title"] = "FlightList";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="page-title">
    <div class="title_left">
        <h3>Vuelos</h3>
    </div>
</div>
<div class="clearfix"></div>

<div class="row">
    <div class="col-md-12 col-sm-12 ">
        <div class="x_panel">
            <div class="x_title">
                <h2>Vuelos <small>encontrados</small></h2>
                <ul class="nav navbar-right panel_toolbox">
                    <li>
                        <a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
                    </li>
                    <li>
                        <a class="close-link"><i class="fa fa-close"></i></a>
                    </li>
                </ul>
                <div class="clearfix"></div>

                <div class="x_content">
                    <div class="x_content">
                        <br />
                        <div class="row">
                            <div class="col-md-12 col-sm-12 ">
                                <div class="x_panel">
                                    <div class="x_content">
                                        <div class="dashboard-widget-content">

                                            <div class="x_panel">

                                                @{
                                                    int count = 1;
                                                    var countries = Model.Countries;
                                                    var airplanes = Model.Airplanes;
                                                    string people = (Model.SearchData.Adults + Model.SearchData.Minors + Model.SearchData.Baby) > 1 ? "personas" : "persona";

                                                    <h2>Vuelos de ida</h2>
                                                    <div class="x_content">
                                                        <ul class="list-unstyled timeline">

                                                            @foreach (var item in Model.FlightsSatrt)
                                                            {
                                                                string direct = item.Direct == "1" ? "Si" : "No";

                                                                double amountEco = item.PriceEconomical * (Model.SearchData.Adults + Model.SearchData.Minors);
                                                                double amountFrist = item.PriceFrist * (Model.SearchData.Adults + Model.SearchData.Minors);
                                                                <li>

                                                                    <div class="block">
                                                                        <div class="tags">
                                                                            <a class="tag">
                                                                                <span>Vuelo @count</span>
                                                                            </a>
                                                                        </div>
                                                                        <div class="block_content">
                                                                            <h2 class="title">
                                                                                <a>@countries.Find(x => x.IdCountry == item.IdOriginCountry).Name <i class="fa fa-arrow-right" aria-hidden="true"></i>   @countries.Find(x => x.IdCountry == item.IdDestinationCountry).Name</a>
                                                                            </h2>
                                                                            <input type="hidden" name="countryStart" value="@countries.Find(x => x.IdCountry == item.IdOriginCountry).Name" />
                                                                            <input type="hidden" name="countryEnd" value="@countries.Find(x => x.IdCountry == item.IdDestinationCountry).Name" />
                                                                            <br /><br />
                                                                            <div class="clearfix"></div>
                                                                            <h2 class="title">Detalles del vuelo</h2>
                                                                            <div class="clearfix"></div>
                                                                            <div class="clearfix"></div>
                                                                            <div class="byline">
                                                                                <span>Duración: </span> @item.Duration
                                                                                <input type="hidden" name="Duration" value="@item.Duration" />
                                                                            </div>
                                                                            <div class="byline">
                                                                                <span>Directo: </span> @direct
                                                                                <input type="hidden" name="Direct" value="@direct" />
                                                                            </div>
                                                                            <div class="clearfix"></div>
                                                                            <h2 class="title">Detalles del avión</h2>
                                                                            <div class="clearfix"></div>
                                                                            <div class="byline">
                                                                                <span>Modelo: </span> @item.Airplane
                                                                                <input type="hidden" name="Airplane" value="@item.Airplane" />
                                                                            </div>
                                                                            <div class="clearfix"></div>
                                                                            <h2 class="title">Detalle del precios</h2>
                                                                            <div class="clearfix"></div>
                                                                            <div class="byline">
                                                                                <span>Precio económica </span> $@item.PriceEconomical por persona
                                                                                <input type="hidden" name="priceEco" value="$@item.PriceEconomical por persona" />
                                                                            </div>
                                                                            <div class="byline">
                                                                                <span>Precio primera clase </span> $@item.PriceFrist por persona
                                                                                <input type="hidden" name="priceFirst" value="$@item.PriceFrist por persona" />
                                                                            </div>
                                                                            <div class="clearfix"></div>
                                                                            <h2 class="title">Totales</h2>
                                                                            <div class="clearfix"></div>
                                                                            <div class="byline">
                                                                                <input type="hidden" name="valueEco" value="$@amountEco" />
                                                                                <span>Total económica </span>  $@amountEco para @(Model.SearchData.Adults + Model.SearchData.Minors) @people <input type="checkbox" class="" name="economicaIda" id="economicaIda" value="economica"  onclick="pricetkIdaEco();" />
                                                                                <input type="hidden" name="totalPriceEco" value="Total económica $@amountEco para @(Model.SearchData.Adults + Model.SearchData.Minors) @people" />
                                                                            </div>
                                                                            <div class="byline">
                                                                                <input type="hidden" name="valueFrist" value="$@amountFrist" />
                                                                                <span>Total primera clase </span>      $@amountFrist para @(Model.SearchData.Adults + Model.SearchData.Minors) @people   <input type="checkbox" class="" name="primeraIda" id="primeraIda" value="primera" onclick="pricetkIdaFrist()" />
                                                                                <input type="hidden" name="totalPriceFirst" value="Total primera clase $@amountFrist para @(Model.SearchData.Adults + Model.SearchData.Minors) @people" />
                                                                            </div>
                                                                            <div class="clearfix"></div>
                                                                            <p class="excerpt">**Vuelo incluye equipaje de mano no mayor a los 10kg, si desea agregar peso adicional deberá seleccionarlo</p>
                                                                            <div class="clearfix"></div>
                                                                            <div class="byline">
                                                                                @foreach (var item2 in Model.Luggages)
                                                                                {
                                                                                    var name = item2.Description + " " + item2.MaxKilos + "kg " + " $" + @item2.Price + "  ";
                                                                                    string id = "ida" + item2.MaxKilos;
                                                                                    <input type="checkbox" class="" name="@id" id="@id" value="@item2.MaxKilos" onclick="equipajeIda(@item2.IdLuggage);" /> @name
                                                                                }
                                                                            </div>
                                                                            <div class="clearfix"></div>
                                                                            <div class="byline">
                                                                                <button class="btn btn-success" onclick="reservartkIda(@item.IdFlight,@Model.SearchData.Adults,@Model.SearchData.Minors,@Model.SearchData.Baby);">Reservar</button>
                                                                            </div>
                                                                        </div>
                                                                    </div>

                                                                </li>

                                                                count++;
                                                            }
                                                        </ul>
                                                    </div>
                                                }
                                            </div>

                                            @if (Model.SearchData.RoundFlight != null)
                                            {
                                                <div class="x_panel">

                                                    @{
                                                        count = 1;

                                                        <div class="x_content">

                                                            <h2>Vuelos de regreso</h2>
                                                            <ul class="list-unstyled timeline">

                                                                @foreach (var item in Model.FlightsEnd)
                                                                {
                                                                    string direct = item.Direct == "1" ? "Si" : "No";

                                                                    double amountEco = item.PriceEconomical * (Model.SearchData.Adults + Model.SearchData.Minors);
                                                                    double amountFrist = item.PriceFrist * (Model.SearchData.Adults + Model.SearchData.Minors);

                                                                    <li>

                                                                        <div class="block">
                                                                            <div class="tags">
                                                                                <a class="tag">
                                                                                    <span>Vuelo @count</span>
                                                                                </a>
                                                                            </div>
                                                                            <div class="block_content">
                                                                                <h2 class="title">
                                                                                    <a>@countries.Find(x => x.IdCountry == item.IdOriginCountry).Name <i class="fa fa-arrow-right" aria-hidden="true"></i>  @countries.Find(x => x.IdCountry == item.IdDestinationCountry).Name </a>
                                                                                </h2>
                                                                                <input type="hidden" name="countryStart" value="@countries.Find(x => x.IdCountry == item.IdOriginCountry).Name" />
                                                                                <input type="hidden" name="countryEnd" value="@countries.Find(x => x.IdCountry == item.IdDestinationCountry).Name" />
                                                                                <br /><br />
                                                                                <div class="clearfix"></div>
                                                                                <h2 class="title">Detalles del vuelo</h2>
                                                                                <div class="clearfix"></div>
                                                                                <div class="clearfix"></div>
                                                                                <div class="byline">
                                                                                    <span>Duración: </span> @item.Duration
                                                                                    <input type="hidden" name="DurationVuelta" value="@item.Duration" />
                                                                                </div>
                                                                                <div class="byline">
                                                                                    <span>Directo: </span> @direct
                                                                                    <input type="hidden" name="DirectVuelta" value="@direct" />
                                                                                </div>
                                                                                <div class="clearfix"></div>
                                                                                <h2 class="title">Detalles del avión</h2>
                                                                                <div class="clearfix"></div>
                                                                                <div class="byline">
                                                                                    <span>Modelo: </span> @item.Airplane
                                                                                    <input type="hidden" name="AirplaneVuelta" value="@item.Airplane" />
                                                                                </div>
                                                                                <div class="clearfix"></div>
                                                                                <h2 class="title">Detalle del precios</h2>
                                                                                <div class="clearfix"></div>
                                                                                <div class="byline">
                                                                                    <span>Precio económica </span> $@item.PriceEconomical por persona
                                                                                    <input type="hidden" name="priceEcoVuelta" value="$@item.PriceEconomical por persona" />
                                                                                </div>
                                                                                <div class="byline">
                                                                                    <span>Precio primera clase </span> $@item.PriceFrist por persona
                                                                                    <input type="hidden" name="priceFirstVuelta" value="$@item.PriceFrist por persona" />
                                                                                </div>
                                                                                <div class="clearfix"></div>
                                                                                <h2 class="title">Totales</h2>
                                                                                <div class="clearfix"></div>
                                                                                <div class="byline">
                                                                                    <input type="hidden" name="valueEcoVuelta" value="$@amountEco" />
                                                                                    <span>Total económica </span>  $@amountEco para @(Model.SearchData.Adults + Model.SearchData.Minors) @people <input type="checkbox" class="" name="economicaVuelta" id="economicaVuelta" value="economica"  onclick="pricetkVueltaEco();" />
                                                                                    <input type="hidden" name="totalPriceEcoVuelta" value="Total económica $@amountEco para @(Model.SearchData.Adults + Model.SearchData.Minors) @people" />
                                                                                </div>
                                                                                <div class="byline">
                                                                                    <input type="hidden" name="valueFristVuelta" value="$@amountFrist" />
                                                                                    <span>Total primera clase </span>      $@amountFrist para @(Model.SearchData.Adults + Model.SearchData.Minors) @people   <input type="checkbox" class="" name="primeraVuelta" id="primeraVuelta" value="primera" onclick="pricetkVueltaFrist();" />
                                                                                    <input type="hidden" name="totalPriceFirstVuelta" value="Total primera clase $@amountFrist para @(Model.SearchData.Adults + Model.SearchData.Minors) @people" />
                                                                                </div>
                                                                                <div class="clearfix"></div>
                                                                                <p class="excerpt">**Vuelo incluye equipaje de mano no mayor a los 10kg, si desea agregar peso adicional deberá seleccionarlo</p>
                                                                                <div class="clearfix"></div>
                                                                                <div class="byline">
                                                                                    @foreach (var item2 in Model.Luggages)
                                                                                    {
                                                                                        var name = item2.Description + " " + item2.MaxKilos + "kg " + " $" + @item2.Price + "  ";
                                                                                        string id = "vuelta" + item2.MaxKilos;
                                                                                        <input type="checkbox" class="" name="@id" id="@id" value="@item2.MaxKilos" onclick="equipajeVuelta(@item2.IdLuggage);" /> @name
                                                                                    }
                                                                                </div>
                                                                                <div class="clearfix"></div>
                                                                                <div class="byline">
                                                                                    <button class="btn btn-success" onclick="reservartkVuelta(@item.IdFlight);">Reservar</button>
                                                                                </div>
                                                                            </div>
                                                                        </div>

                                                                    </li>
                                                                    count++;
                                                                }
                                                            </ul>
                                                        </div>

                                                        <button class="btn btn-success" id="btn-buy">Comprar</button>

                                                    }
                                                </div>
                                            }
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>

        var dataFlight = new Object();

        function reservartkVuelta(idFlig) {
            dataFlight.IdFligReturn = idFlig;
        }

        function reservartkIda(idFlig, Adults, Minors, Baby) {
            dataFlight.IdFligStart = idFlig;
            dataFlight.Adults = Adults;
            dataFlight.Minors = Minors;
            dataFlight.Baby = Baby;
        }

        function equipajeVuelta(IdLuggage) {
            dataFlight.LuggageReturn = IdLuggage;
        }
        function equipajeIda(IdLuggage) {
            dataFlight.LuggageStart = IdLuggage;
        }

        function pricetkIdaEco() {
            dataFlight.PriceIdaEco = 1;
        }
        function pricetkVueltaEco() {
            dataFlight.PriceVueltaEco = 1;
        }

        function pricetkIdaFrist() {
            dataFlight.PriceIdaFrist = 1;
        }
        function pricetkVueltaFrist() {
            dataFlight.PriceVueltaFrist = 1;
        }

        $('#btn-buy').click(function () {

            $.post("/Flight/InvoiceFlight", {
                'DataFlight': dataFlight
            },
                function (data) {
                    console.log(data);
                    $('body').html(data);
                }, "html");

        });

    </script>
}