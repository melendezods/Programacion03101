@model ICollection<Universidad.Models.Country>

@{
    ViewData["Title"] = "Search";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="page-title">
    <div class="title_left">
        <h3>Vuelos</h3>
    </div>
</div>
<div class="clearfix"></div>

<div class="row">
    <div class="col-md-12 col-sm-12 ">
        <div class="x_panel">
            <div class="x_title">
                <h2>Buscar <small>vuelos</small></h2>
                <ul class="nav navbar-right panel_toolbox">
                    <li>
                        <a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
                    </li>
                    <li>
                        <a class="close-link"><i class="fa fa-close"></i></a>
                    </li>
                </ul>
                <div class="clearfix"></div>

                <div class="x_content">
                    <div class="x_content">
                        <br />
                        <div class="row">
                            <div class="col-md-12 col-sm-12 ">
                                <div class="x_panel">
                                    <div class="x_content">
                                        <div class="dashboard-widget-content">

                                            <div class="col-md-6">

                                                <form action="/Flight/FlightList" method="post" id="demo-form2" data-parsley-validate class="form-horizontal form-label-left">
                                                    <div class="item form-group">
                                                        <label class="col-form-label col-md-3 col-sm-3 label-align"></label>
                                                        <div class="col-md-6 col-sm-6 ">
                                                            <p>
                                                                Vuelo redondo:
                                                                <input type="checkbox" class="flat" name="RoundFlight" id="RoundFlight" value="redondo" checked="" />
                                                                Vuelo sencillo:
                                                                <input type="checkbox" class="flat" name="SimpleFlight" id="SimpleFlight" value="sencillo" />
                                                            </p>

                                                        </div>
                                                    </div>

                                                    <div class="item form-group">
                                                        <label class="col-form-label col-md-3 col-sm-3 label-align" for="first-name">
                                                            Origen <span class="required">*</span>
                                                        </label>
                                                        <div class="col-md-6 col-sm-6 ">
                                                            @{
                                                                if (Model != null)
                                                                {
                                                                    <select id="IdOriginCountry" name="IdOriginCountry" class="form-control" required>
                                                                        @foreach (var item in Model)
                                                                        {
                                                                            <option value="@item.IdCountry">@item.Name</option>

                                                                        }
                                                                    </select>
                                                                }
                                                            }
                                                        </div>
                                                    </div>
                                                    <div class="item form-group">
                                                        <label class="col-form-label col-md-3 col-sm-3 label-align" for="last-name">
                                                            Destino <span class="required">*</span>
                                                        </label>
                                                        <div class="col-md-6 col-sm-6 ">
                                                            @{
                                                                if (Model != null)
                                                                {
                                                                    <select id="IdDestinationCountry" name="IdDestinationCountry" class="form-control" required>
                                                                        @foreach (var item in Model)
                                                                        {
                                                                            <option value="@item.IdCountry">@item.Name</option>

                                                                        }
                                                                    </select>
                                                                }
                                                            }

                                                        </div>
                                                    </div>

                                                    <div class="item form-group">
                                                        <label class="col-form-label col-md-3 col-sm-3 label-align">
                                                            Salida <span class="required">*</span>
                                                        </label>
                                                        <div class="col-md-6 col-sm-6 ">
                                                            <input id="startDate" name="startDate" class="date-picker form-control" placeholder="dd-mm-yyyy" type="text" required="required" onfocus="this.type='date'" onmouseover="this.type='date'" onclick="this.type='date'" onblur="this.type='text'" onmouseout="timeFunctionLong(this)">
                                                            <script>
                                                                function timeFunctionLong(input) {
                                                                    setTimeout(function () {
                                                                        input.type = 'text';
                                                                    }, 60000);
                                                                }
                                                            </script>
                                                        </div>
                                                    </div>
                                                    <div class="item form-group">
                                                        <label class="col-form-label col-md-3 col-sm-3 label-align">
                                                            Regreso <span class="required">*</span>
                                                        </label>
                                                        <div class="col-md-6 col-sm-6 ">
                                                            <input id="endDate" name="endDate" class="date-picker form-control" placeholder="dd-mm-yyyy" type="text" required="required"  onfocus="this.type='date'" onmouseover="this.type='date'" onclick="this.type='date'" onblur="this.type='text'" onmouseout="timeFunctionLong(this)" >
                                                            <script>
                                                                function timeFunctionLong(input) {
                                                                    setTimeout(function () {
                                                                        input.type = 'text';
                                                                    }, 60000);
                                                                }
                                                            </script>
                                                        </div>
                                                    </div>
                                                    <div class="item form-group">
                                                        <label class="col-form-label col-md-3 col-sm-3 label-align" for="last-name">
                                                            Aadultos<span class="required">*</span>
                                                        </label>
                                                        <div class="col-md-6 col-sm-6 ">
                                                            <input type="number" id="Adults" name="Adults" class="form-control" placeholder=" +13 años">
                                                        </div>
                                                    </div>
                                                    <div class="item form-group">
                                                        <label class="col-form-label col-md-3 col-sm-3 label-align" for="last-name">
                                                            Menores <span class="required">*</span>
                                                        </label>
                                                        <div class="col-md-6 col-sm-6 ">
                                                            <input type="number" id="Minors" name="Minors" class="form-control" placeholder=" -13 años">
                                                        </div>
                                                    </div>
                                                    <div class="item form-group">
                                                        <label class="col-form-label col-md-3 col-sm-3 label-align" for="last-name">
                                                            Bebés <span class="required">*</span>
                                                        </label>
                                                        <div class="col-md-6 col-sm-6 ">
                                                            <input type="number" id="Baby" name="Baby" class="form-control" placeholder="0 - 23 meses">
                                                        </div>
                                                    </div>
                                                    <div class="item form-group">
                                                        <label class="col-form-label col-md-3 col-sm-3 label-align"></label>
                                                        <div class="col-md-6 col-sm-6 ">
                                                            <button type="submit" class="btn btn-success">Buscar vuelos <i class="fa fa-fighter-jet" aria-hidden="true"></i></button>
                                                        </div>
                                                    </div>

                                                </form>

                                            </div>

                                            <div id="world-map-gdp" class="col-md-6 col-sm-12 " style="height:350px;"></div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

